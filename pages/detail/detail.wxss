/* pages/detail.wxss */
.detailContainer{
  display: flex;
  flex-direction: column;
  position: relative;
}

.head_img{
  width: 100%;
  height: 400rpx;

}

.music_img{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 50%;
  margin-left: -30rpx;
  top: 170rpx;
}

.avatar_info{
  padding: 0 20rpx;
}

.avatar_info image{
  width: 70rpx;
  height: 70rpx;
  vertical-align: middle
}

.avatar_info text{
  font-size: 24rpx;
  color: #666;
  vertical-align: middle;
  margin: 6rpx;
}

.title{
  font-size: 32rpx;
  font-weight: 700;
  margin: 20rpx;
}

.share_collection_line{
  position: relative;
}

.share_collection{
  float: right;
  margin-right: 50rpx;
}

.share_collection image{
  width: 80rpx;
  height: 80rpx;
  padding-right: 10rpx; 
}

.line{
  border: 1rpx solid #eee;
  position: absolute;
  width: 94%;
  left: 3%;
  bottom: 50rpx;
  z-index: -1;
}

.content{
  font-size: 32rpx;
  color: #666;
  text-indent: 50rpx;
  margin: 20rpx;

}

.buttonShare{
  width: 700rpx;
  font-size: 36rpx;
  background-color: #89ABE3;
  color: white;
}

